{% extends 'layout.twig' %}

{% block head %}
	<link rel="stylesheet" type="text/css" href="{{ path }}assets/styles/css/registrar.css">
{% endblock %}

{% block content %}
	<div class="container menuLog">
		<h3 class="h3-formulario">Formulario de registro</h3>
		<hr>
		<form>
			<label class="input-group datos-formulario">Ingresa tus datos personales:</label>
			<div>
				<div class="form-group has-feedback">
					<div class="input-group input-texto input-nombre">
						<input type="text" class="form-control texto" placeholder="Nombre" maxlength="15" name="nombre" id="nombre" required>
					</div>
				</div>
				<div class="form-group has-feedback">
					<div class="input-group input-texto">
						<input type="text" class="form-control texto" placeholder="Apellido" maxlength="15" name="apellido" id="apellido" required>
					</div>
				</div>
			</div>
			<div class="form-group has-feedback">
				<div class="input-group input-texto">
					<input type="date" class="form-control texto" name="fecha" id="fecha" required>
				</div>
			</div>
			<div class="form-group has-feedback">
				<div class="input-group input-texto">
					<input type="tel" class="form-control texto" placeholder="TelÃ©fono" maxlength="11" name="telefono" id="telefono" required>
				</div>
			</div>
			<div class="form-group has-feedback">
				<div class="input-group input-texto">
					<input type="email" class="form-control texto" placeholder="Email" maxlength="25" name="email" id="email" required>
				</div>
			</div>
			<div class="form-group has-feedback">
				<div class="input-group input-texto">
					<input type="password" class="form-control texto" placeholder="Password" maxlength="15" name="password" id="password" required>
				</div>
			</div>
		</form>
		<p class="lead">
			<a class="btn btn-primary btn-lg" href="#" role="button">Confirmar</a>
			<a class="btn btn-danger btn-lg" href="?/home/" role="button">Cancelar</a>
		</p>
	</div>
{% endblock %}
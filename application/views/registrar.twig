{% extends 'layout.twig' %}

{% block head %}
	<link rel="stylesheet" type="text/css" href="{{ path }}assets/styles/css/registrar.css">
{% endblock %}

{% block content %}
	<div class="row main ">
		<div class="col-md-8">
			<h3 class="h3-formulario">Formulario de registro</h3>
			<hr>
			<div class="caja">
				<form data-toggle="validator" method="POST" action="{{ dirpath }}registrar/registrar/">
					<label class="input-group datos-formulario">Ingresa tus datos personales:</label>
					<div class="form-group has-feedback">
						<div class="input-group input-texto">
							<input type="text" class="form-control texto" pattern="[a-zA-Z]{1,15}$" placeholder="Nombre" name="nombre" id="nombre" data-error="Llenar el campo, sólo con letras." required>
							<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
							<div class="help-block with-errors "></div>
						</div>
					</div>
					<div class="form-group has-feedback">
						<div class="input-group input-texto">
							<input type="text" class="form-control texto" pattern="[a-zA-Z]{1,15}$" data-error="Llenar el campo, sólo con letras." placeholder="Apellido" name="apellido" id="apellido" required>
							<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
							<div class="help-block with-errors"></div>
						</div>
					</div>
					<div class="form-group has-feedback">
						<div class="input-group input-texto">
							<input type="date" class="form-control texto" pattern="[0-9]" data-error="Ingresar fecha de nacimiento."name="fecha" id="fecha" required>
							<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
							<div class="help-block with-errors "></div>
						</div>
					</div>
					<div class="form-group has-feedback">
						<div class="input-group input-texto">
							<input type="tel" class="form-control texto" placeholder="Telefono" pattern="[0-9]{9,11}$" data-error="Ingresar teléfono" maxlength="11" name="telefono" id="telefono" required>
							<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
							<div class="help-block with-errors "></div>
						</div>
					</div>
					<div class="form-group has-feedback">
						<div class="input-group input-texto">
							<input type="email" class="form-control texto" pattern="[a-z0-9A-Z]+@[a-z0-9.-]+\.[a-z]{2,4}$" data-error="Ingrese un email válido." placeholder="Email" maxlength="25" name="email" id="email" required>
							<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
							<div class="help-block with-errors "></div>
						</div>
					</div>
					<div class="form-group has-feedback">
						<div class="input-group input-texto">
							<input type="password" class="form-control texto" pattern="[a-z0-9A-Z]{6,12}$" data-error="Mínimo 6 y máximo 12 caracteres"  placeholder="Password" name="password" id="password" required>
							<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
							<div class="help-block with-errors "></div>
						</div>
					</div>
					<p class="lead">
						<input type="submit" class="btn btn-primary btn-lg"  value="Confirmar">
						<a class="btn btn-danger btn-lg" href="{{ dirpath }}home/" role="button">Cancelar</a>
					</p>


				</form>
			</div>
		</div>
	</div>
{% endblock %}
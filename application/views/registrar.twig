{% extends 'layout.twig' %}

{% block head %}
		<link rel="stylesheet" type="text/css" href="{{ path }}assets/styles/css/registrar.css">
		{# fiajte que tiene el mismo efecto solo que se carga cuando llamas a esta pagina en si.  #}
{% endblock %}

{% block content %}

		<div class="row">
			<div class="col-md-5">
			</div>
			<div class="col-md-7">
				<div class=" menuLog ">
					<h3 class="h3-formulario">Formulario de registro</h3>
					<hr>
					<form>
						<div class="form-group has-feedback">
							<div class="input-group input-nombre">
								<input type="text" class="form-control" placeholder="Nombre" maxlength="15" name="nombre" id="nombre">
							</div>
						</div>
						<div class="form-group has-feedback">
							<div class="input-group">
								<input type="text" class="form-control" placeholder="Apellido" maxlength="15" name="apellido" id="apellido">
							</div>
						</div>
						<div class="form-group has-feedback">
							<div class="input-group input-dia fecha">
								<input type="text" class="form-control" placeholder="Día" maxlength="2" name="dia" id="dia">
							</div>
						</div>
						<div class="form-group has-feedback">
							<div class="input-group input-mes fecha">
								<input type="text" class="form-control" placeholder="Mes" maxlength="2" name="mes" id="mes">
							</div>
						</div>
						<div class="form-group has-feedback">
							<div class="input-group fecha">
								<input type="text" class="form-control" placeholder="Año" maxlength="4" name="año" id="año">
							</div>
						</div>
						<div class="form-group has-feedback">
							<div class="input-group">
								<input type="tel" class="form-control" placeholder="Teléfono" maxlength="11" name="telefono" id="telefono">
							</div>
						</div>
						<div class="form-group has-feedback">
							<div class="input-group">
								<input type="email" class="form-control" placeholder="Email" maxlength="25" name="email" id="email">
							</div>
						</div>
						<div class="form-group has-feedback">
							<div class="input-group">
								<input type="password" class="form-control" placeholder="Password" maxlength="15" name="password" id="password">
							</div>
						</div>
					</form>

					<p class="lead">
						<a class="btn btn-primary btn-lg" href="#" role="button">Confirmar</a>
						<a class="btn btn-danger btn-lg" href="?/home/" role="button">Cancelar</a>
					</p>

				</div>
			</div>

		</div>

{% endblock %}
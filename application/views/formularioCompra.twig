{% extends 'layout.twig' %}

{% block head %}
	<link rel="stylesheet" type="text/css" href="{{ path }}assets/styles/css/registrar.css">
{% endblock %}

{% block content %}
	{# {{ dump() }} #}
	<div class="migas-de-pan">
		<ol class="breadcrumb">
				<li><a href="{{ dirpath }}home/">inicio</a></li>
				<li>Compra Credito</li>
		</ol>
	</div>
	<!-- end breadcrum -->
	<div class="row">
		<div class="container menuLog">
			<div class="col-md-8">
				<h3 class="h3-formulario">Formulario de compra</h3>
				<hr>
				<form method="POST" action="{{dirpath}}comprarCredito/validar/">
					<label class="input-group datos-formulario">Ingresa los datos de la tarjeta:</label>
					<p>Precio por credito $50</p>
					<div class="form-group has-feedback">
						<div class="input-group input-texto">
							<input type="text" class="form-control texto" placeholder="Cantidad de creditos" maxlength="3" name="cantidad" id="cantidad" required>
						</div>
					</div>
					<div class="form-group has-feedback">
						<div class="input-group input-texto">
							<input type="text" class="form-control texto" placeholder="NÃºmero de tarjeta" maxlength="10" name="numeroTarjeta" id="numeroTarjeta" required>
						</div>
					</div>
					<div class="form-group has-feedback">
						<div class="input-group input-texto">
							<input type="password" class="form-control texto" placeholder="Clave" maxlength="4" name="clave" id="clave" required>
						</div>
					</div>
				<p class="lead">
					{# <a class="btn btn-primary btn-lg" type=""role="button">Confirmar</a> #}
					<button type="submit" class="btn btn-primary btn-lg">Confirmar</button>
					<a class="btn btn-danger btn-lg" href="{{ dirpath }}home/" role="button">Cancelar</a>
				</p>
				</form>
			</div>
		</div>
		
	</div>
{% endblock %}
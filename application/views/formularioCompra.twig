{% extends 'layout.twig' %}

{% block head %}
	<link rel="stylesheet" type="text/css" href="{{ path }}assets/styles/css/registrar.css">
{% endblock %}

{% block content %}
	{# {{ dump() }} #}
	<div class="migas-de-pan">
		<ol class="breadcrumb">
				<li><a href="{{ dirpath }}home/">inicio</a></li>
				<li>Compra crédito</li>
		</ol>
	</div>
	<!-- end breadcrum -->
	<div class="row">
			<div class="col-md-8">
				<h3 class="h3-formulario">Formulario de compra</h3>
				<hr>
				<form data-toggle="validator" method="POST" action="{{dirpath}}comprarCredito/validar/">
					<label class="input-group datos-formulario">Ingresa los datos de la tarjeta:</label>
					<p>Precio por credito $50</p>
					<div class="form-group has-feedback">
						<div class="input-group input-texto">
							<input type="number" class="form-control texto"  pattern="[1-9]{1,3}$" min="1" max="50" placeholder="Cantidad de creditos" name="cantidad" id="cantidad" data-error="Cantidad de créditos entre 1 y 50." required>
						<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
						<div class="help-block with-errors "></div>
						</div>
					</div>
					<div class="form-group has-feedback">
						<div class="input-group input-texto">
							<input type="text" class="form-control texto" pattern="[0-9]{9,10}$" placeholder="Número de tarjeta" name="numeroTarjeta" id="numeroTarjeta" data-error="Tarjeta entre 9 y 10 números."  required>
						<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
						<div class="help-block with-errors "></div>
						</div>
					</div>
					<div class="form-group has-feedback">
						<div class="input-group input-texto">
							<input type="password" class="form-control texto" placeholder="Clave" pattern="[0-9]{4,4}$" name="clave" id="clave"  data-error="Clave de 4 dígitos."required>
						<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
						<div class="help-block with-errors "></div>
						</div>
					</div>
				<p class="lead">
					{# <a class="btn btn-primary btn-lg" type=""role="button">Confirmar</a> #}
					<button type="submit" class="btn btn-primary btn-lg">Confirmar</button>
					<a class="btn btn-danger btn-lg" href="{{ dirpath }}home/" role="button">Cancelar</a>
				</p>
				</form>
			</div>
		
	</div>
{% endblock %}
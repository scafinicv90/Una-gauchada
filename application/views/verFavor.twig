{% extends 'layout.twig' %}

{% block content %}
<div class="row main">
	<div class="col-md-4"></div>
	<div class="col-md-8">
		

		<div class="coment">
			<form>
				<div class="panel panel-default">
				  <div class="panel-heading">
				    <h3 class="panel-title">Panel title</h3>
				  </div>
				  <div class="panel-body">
				    <textarea class="form-control" rows="3"></textarea>
				  </div>
				</div>
			</form>
		</div>
			{% for f in comentarios %}
				<div class="panel panel-default">
				  <div class="panel-heading">
				    <h3 class="panel-title">Panel title</h3>
				  </div>
				  <div class="panel-body">
				    {{ f.descripcion}}
				  </div>
				</div>
			{% endfor %}
	</div>

</div>
{% endblock %}
{% extends 'layout.twig' %}

{% block content %}
<div class="row main">
	<div class="col-md-4"></div>
	<div class="col-md-8">
		<h1>ver favor </h1>
		<p>{{ favor[0].id}}</p>
		<p>{{ favor[0].titulo }}</p>
		<p>{{ favor[0].ciudad }}</p>
		<p>{{favor[0].provincia }}</p>
		<p>{{favor[0].fec_lim }}</p>
		<p>{{favor[0].descripcion }}</p>
		<p>{{favor[0].id_usuario }}</p>
		<img src = '{{pathimg}}{{ favor[0].img }}' style="width:128px;height:128px" />

		<div class="coment">
			<form>
				<div class="panel panel-default">
				  <div class="panel-heading">
				    <h3 class="panel-title">Panel title</h3>
				  </div>
				  <div class="panel-body">
				    <textarea class="form-control" rows="3"></textarea>
				  </div>
				</div>
			</form>
		</div>
			{% for f in comentarios %}
				<div class="panel panel-default">
				  <div class="panel-heading">
				    <h3 class="panel-title">Panel title</h3>
				  </div>
				  <div class="panel-body">
				    {{ f.descripcion}}
				  </div>
				</div>
			{% endfor %}
	</div>

</div>
{% endblock %}